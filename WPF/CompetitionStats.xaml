<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF"
        xmlns:Controller="clr-namespace:Controller;assembly=Controller" x:Class="WPF.DriverStats"
        mc:Ignorable="d"
        Title="Competition Stats" Height="320" Width="250">

    <Window.DataContext>
        <Controller:CompetitionContext/>
    </Window.DataContext>

    <Grid>
        <ListView Name="LeaderBoard" ItemsSource="{Binding leaderBoard}" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,134">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name:" DisplayMemberBinding="{Binding Name}" Width="120" />
                    <GridViewColumn Header="Points:" DisplayMemberBinding="{Binding Points}" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>

        <ListView Name="NextTracks" ItemsSource="{Binding trackNameList}" Margin="0,160,0,0" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Volgende Tracks:" DisplayMemberBinding="{Binding Name}" />
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
